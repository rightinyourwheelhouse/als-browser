{
  "name": "als-browser",
  "private": true,
  "version": "1.0.0",
  "description": "Browser for the ALS-liga",
  "main": "app/index.js",
  "author": "Jamie-Lee Hart, Tommy Tytgat, Ewout Verhamme",
  "license": "MIT",
  "build": {
    "appId": "ALS-browser",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on -c waitOnConfig.json http-get://localhost:3000/ && electron .\"",
    "electron:build": "npm run build && electron-builder --mac",
    "electron:build:all": "npm run build && electron-builder -mw"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.6",
    "@tensorflow/tfjs-node": "^3.16.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "promise-worker": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-electron-browser-window": "^0.1.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "^10.4.4",
    "concurrently": "^6.2.0",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-react": "^7.28.0",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.10",
    "tailwindcss": "^3.0.23",
    "vite": "^2.9.0",
    "wait-on": "^5.3.0"
  }
}
